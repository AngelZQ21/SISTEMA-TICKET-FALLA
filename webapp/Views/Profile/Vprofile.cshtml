                                $("#RrbActivos").prop('disabled', true);
                                $("#RrbInactivos").prop('disabled', true);

                                console.log("ERROR AJAX : " + ajaxOptions);
                                console.log("ERROR AJAX : " + thrownError);
                                console.log(xhr.responseText);
                                console.log(xhr);

                            }

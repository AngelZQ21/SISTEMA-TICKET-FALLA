                                    $("#btnBuscar").prop('disabled', false);
                                    $("#btnNuevoPerfil").prop('disabled', false);
                                    $("#RrbActivos").prop('disabled', false);
                                    $("#RrbInactivos").prop('disabled', false);

                                }

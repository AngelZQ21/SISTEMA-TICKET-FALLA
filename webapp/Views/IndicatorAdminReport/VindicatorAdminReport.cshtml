        var $registerForm = $("#FrmFiltros").validate({
            rules: {
                startDate: {
                    required: true,
                    australianDate: true
                },
                endDate: {
                    required: true,
                    australianDate: true
                }
            },
            messages: {
                startDate: {
                    required: tCampoRequerido,
                    australianDate: tFormatoFechaNoValido
                },
                endDate: {

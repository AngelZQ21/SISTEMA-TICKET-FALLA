<script type="text/javascript">
    /*----------------------------------------------------------------------------------------------- VARIABLES*/
    var starDate = "";
    var endDate = "";

    $("#btnBuscar").click(function () {
        $.validator.addMethod(
            "australianDate",
            function (value, element) {
                // put your own logic here, this is just a (crappy) example
                return value.match(/^\d\d?\/\d\d?\/\d\d\d\d$/);
            },
